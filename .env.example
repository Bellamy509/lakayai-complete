# === LakayAI Environment Configuration ===
# Copy this file to .env and fill in your actual values

# === LLM Provider API Keys ===
# You only need to enter the keys for the providers you plan to use

# Google AI Studio - Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# OpenAI - Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# xAI (Grok) - Get your key at: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# Anthropic (Claude) - Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenRouter - Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Ollama (for local models) - Default local URL
OLLAMA_BASE_URL=http://localhost:11434/api

# === Authentication ===
# Secret for Better Auth (generate with: npx @better-auth/cli@latest secret)
BETTER_AUTH_SECRET=your_32_character_secret_here

# URL for Better Auth (the URL you access the app from)
# For local development: http://localhost:3000
# For production: https://your-domain.com
BETTER_AUTH_URL=http://localhost:3000

# === Database ===
# PostgreSQL connection string
# Local: postgres://username:password@localhost:5432/database_name
# For Railway/Supabase: Use the provided connection string
POSTGRES_URL=postgres://username:password@localhost:5432/lakayai_db

# === MCP Configuration ===
# Whether to use file-based MCP config (default: false, uses database)
FILE_BASED_MCP_CONFIG=false

# === OAuth Settings (Optional) ===
# Fill in these values only if you want to enable Google/GitHub login
# Google OAuth - Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth - Get from: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# === Development Settings ===
# Next.js environment
NODE_ENV=development

# === Optional: Redis Cache ===
# If you want to use Redis for caching (optional)
REDIS_URL=redis://localhost:6379
